<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    xmlns:ProgressSpin="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ProgressBar
        android:id="@+id/progressbar_page_item_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    
     <com.azhuoinfo.gbf.view.touchgallery.TouchImageView
        android:id="@+id/page_item_touchImageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
      <ImageView
            android:id="@+id/page_item_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:background="@drawable/ic_toggle_check"
            android:contentDescription="@string/app_name"
            android:visibility="gone"
            android:gravity="center"/>
</RelativeLayout>