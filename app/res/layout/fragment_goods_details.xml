<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_grey" >
	<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.azhuoinfo.gbf.view.AutoGallery
                android:id="@+id/autogallery_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/textview_goods_details_name"
                    style="@style/Common_TextView_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="@string/details_title" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textview_goods_details_price"
                        style="@style/TextView.Yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:text="@string/test" />

                    <TextView
                        android:id="@+id/textview_goods_details_oldprice"
                        style="@style/TextView.Grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="@string/test" />

                    <TextView
                        android:id="@+id/textview_goods_details_distanct"
                        style="@style/TextView.Yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="@string/test" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textview_goods_details_postdate"
                        style="@style/Common_TextView_Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/test" />

                    <TextView
                        android:id="@+id/textview_goods_details_num"
                        style="@style/Common_TextView_Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/test" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/textview_goods_details_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/textview_goods_details_mark"
                    style="@style/Common_TextView_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:lines="3"
                    android:text="@string/test" />

                <include layout="@layout/common_view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp" >

                    <TextView
                        android:id="@+id/textview_goods_details_zhengpin"
                        style="@style/Common_TextView_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="4dp"
                        android:drawableLeft="@drawable/ic_ensure"
                        android:text="@string/test" />

                    <TextView
                        android:id="@+id/textview_goods_details_quanwei"
                        style="@style/Common_TextView_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:drawablePadding="4dp"
                        android:drawableLeft="@drawable/ic_ensure"
                        android:text="@string/test" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="8dp" >

                <TextView
                    style="@style/Common_TextView_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="@string/details_rating" />

                <include layout="@layout/common_view_line" />

                <ImageView
                    android:id="@+id/imageview_goods_details_rating"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="8dp" >

                <TextView
                    style="@style/Common_TextView_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="@string/details_info" />

                <include layout="@layout/common_view_line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="8dp" >

                <TextView
                    style="@style/Common_TextView_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="@string/test" />

                <include layout="@layout/common_view_line" />

                <TextView
                    android:id="@+id/imageview_goods_details_story"
                    style="@style/Common_TextView_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="5"
                    android:text="@string/test" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="8dp" >

                <TextView
                    style="@style/Common_TextView_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="@string/details_brand_story" />

                <include layout="@layout/common_view_line" />

                <com.azhuoinfo.gbf.view.gallery.LeftGallery
                    android:id="@+id/leftgallery_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
<include layout="@layout/layout_details_bottom"/>
</RelativeLayout>