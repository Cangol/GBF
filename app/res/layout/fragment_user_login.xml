<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp" >

    <EditText
        android:id="@+id/edittext_user_login_mobile"
        style="@style/Common_EditText.Transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:hint="@string/user_mobile_hint"
        android:singleLine="true" >
    </EditText>

    <include layout="@layout/common_view_line_white" />

    <TextView
        android:id="@+id/textview_user_login_mobile_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edittext_user_login_password"
        style="@style/Common_EditText.Transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:hint="@string/user_password_hint"
        android:inputType="textPassword"
        android:singleLine="true" />

    <include layout="@layout/common_view_line_white" />

    <TextView
        android:id="@+id/textview_user_login_password_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edittext_user_login_verifycode"
                style="@style/Common_EditText.Transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                android:hint="@string/user_verifycode_hint"
                android:inputType="textPassword"
                android:singleLine="true" />

            <include layout="@layout/common_view_line_white" />

            <TextView
                android:id="@+id/textview_user_login_verifycode_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageview_user_login_verifycode"
            android:layout_width="77dp"
            android:layout_height="32dp"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="12dp" >

        <TextView
            android:id="@+id/textview_user_login_remember_account"
            style="@style/TextView.White"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_toggle_check"
            android:drawablePadding="4dp"
            android:text="@string/user_remember_account" />

        <TextView
            android:id="@+id/textview_user_login_remember_password"
            style="@style/TextView.White"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_toggle_check"
            android:drawablePadding="4dp"
            android:text="@string/user_remember_password" />
    </LinearLayout>

    <Button
        android:id="@+id/button_user_login_login"
        style="@style/Button.Yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/user_login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_user_login_register_hint"
            style="@style/TextView.White"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/user_register_hint" />

        <TextView
            android:id="@+id/textview_user_login_forget"
            style="@style/TextView.Yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_forget" />
    </LinearLayout>

</LinearLayout>