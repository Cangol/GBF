<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listview_item_message_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:background="@drawable/common_listview_item_selector"
    android:descendantFocusability="beforeDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/layout_car_bottom_checkall"
        style="@style/Common_TextView_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_toggle_check"
        android:drawablePadding="4dp"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:text="@string/car_selectall" />

    <TextView
        android:id="@+id/layout_car_bottom_price"
        style="@style/Common_TextView_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:text="@string/car_total" />

    <TextView
        android:id="@+id/layout_car_bottom_checkout"
        style="@style/Button.Yellow"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:singleLine="true"
        android:text="@string/car_checkout" />

</LinearLayout>