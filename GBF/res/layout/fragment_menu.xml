<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/menu_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_menu_home"
            style="@style/Menu_Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/menu_home"
            android:drawableTop="@drawable/ic_menu_home_selector" />

        
		<TextView
            android:id="@+id/textview_menu_category"
            style="@style/Menu_Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/menu_category"
            android:drawableTop="@drawable/ic_menu_category_selector" />
		  
        <TextView
            android:id="@+id/textview_menu_brand"
            style="@style/Menu_Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/menu_brand"
            android:drawableTop="@drawable/ic_menu_brand_selector" />

        <TextView
            android:id="@+id/textview_menu_mine"
            style="@style/Menu_Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/menu_mine"
            android:drawableTop="@drawable/ic_menu_mine_selector" />
</LinearLayout>
