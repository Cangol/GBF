<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/Common_Settings_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextView.Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_contact"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:text="@string/friend_contact" />
		<include layout="@layout/common_view_line"/>
        <TextView
            style="@style/TextView.Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_qrcode"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:text="@string/friend_qrcode" />
    </LinearLayout>

</LinearLayout>