            <include layout="@layout/common_view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" >

                <include layout="@layout/common_view_star" />

                <TextView
                    style="@style/Common_Settings_TextView_Title"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-8dp"
                    android:text="@string/publish_details_crowd" />

                <EditText
                    style="@style/Common_EditText.Transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/publish_details_crowd_hint" />
            </LinearLayout>

            <include layout="@layout/common_view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" >

                <include layout="@layout/common_view_star" />

                <TextView
                    style="@style/Common_Settings_TextView_Title"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-8dp"
                    android:text="@string/publish_details_color" />

                <EditText
