                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/publish_details_posttime_hint" />
            </LinearLayout>

            <include layout="@layout/common_view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" >

                <TextView
                    style="@style/Common_Settings_TextView_Title"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-8dp"
                    android:text="@string/publish_details_story" />

                <EditText
                    style="@style/Common_EditText.Transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/publish_details_story_hint"
                    android:gravity="top|left"
                    android:lines="3" />
            </LinearLayout>

            <include layout="@layout/common_view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal"
                android:padding="4dp" >

                <TextView
                    style="@style/Common_Settings_TextView_Title"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-8dp"
                    android:text="@string/publish_details_keywords" />

                <EditText
                    style="@style/Common_EditText.Transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/publish_details_keywords_hint"
                    android:gravity="top|left"
                    android:lines="3" />
            </LinearLayout>

            <include layout="@layout/common_view_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/button_publish_details_confirm"
                style="@style/Button.Yellow"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="@string/publish_confirm" />
        </LinearLayout>
