<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment_background"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/Common_Settings_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="12dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp" >

                <TextView
                    style="@style/Common_Settings_TextView_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_avatar" />

                <TextView
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/user_public" />

                <com.azhuoinfo.gbf.view.imageview.round.RoundedImageView
                    android:id="@+id/imageview_user_info_face"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_face_man"
                    app:oval="true" />
            </LinearLayout>

            <include layout="@layout/common_view_line" />

            <LinearLayout
                android:id="@+id/layout_user_info_changenickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" >

                <TextView
                    style="@style/Common_Settings_TextView_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_nickname" />

                <TextView
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/user_public" />

                <TextView
                    android:id="@+id/textview_user_info_nickname"
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test" />
            </LinearLayout>

            <include layout="@layout/common_view_line" />

            <LinearLayout
                android:id="@+id/layout_user_info_changegender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" >

                <TextView
                    style="@style/Common_Settings_TextView_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_gender" />

                <TextView
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/user_public" />

                <TextView
                    android:id="@+id/textview_user_info_gender"
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test" />
            </LinearLayout>

            <include layout="@layout/common_view_line" />

            <LinearLayout
                android:id="@+id/layout_user_info_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" >

                <TextView
                    style="@style/Common_Settings_TextView_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_signature" />

                <TextView
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/user_public" />

                <TextView
                    android:id="@+id/textview_user_info_userid"
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/test" />
            </LinearLayout>

            <include layout="@layout/common_view_line" />

            <LinearLayout
                android:id="@+id/layout_user_info_changebirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" >

                <TextView
                    style="@style/Common_Settings_TextView_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_birthday" />

                <TextView
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/user_private" />

                <TextView
                    android:id="@+id/textview_user_info_birthday"
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test" />
            </LinearLayout>

            <include layout="@layout/common_view_line" />

            <LinearLayout
                android:id="@+id/layout_user_info_changemobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" >

                <TextView
                    style="@style/Common_Settings_TextView_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_mobile" />

                <TextView
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/user_private" />

                <TextView
                    android:id="@+id/textview_user_info_mobile"
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_bind" />
            </LinearLayout>

            <include layout="@layout/common_view_line" />

            <LinearLayout
                android:id="@+id/layout_user_info_changeemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" >

                <TextView
                    style="@style/Common_Settings_TextView_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_email" />

                <TextView
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/user_private" />

                <TextView
                    android:id="@+id/textview_user_info_email"
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_bind" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/Common_Settings_TextView_Hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_bind" />

        <LinearLayout
            style="@style/Common_Settings_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" >

                <TextView
                    style="@style/Common_Settings_TextView_Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/user_real_name" />

                <TextView
                    android:id="@+id/textview_user_info_realname"
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/test" />
            </LinearLayout>

            <include layout="@layout/common_view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" >

                <TextView
                    style="@style/Common_Settings_TextView_Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/user_sfzh" />

                <TextView
                    android:id="@+id/textview_user_info_sfzh"
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test" />
            </LinearLayout>

            <include layout="@layout/common_view_line" />

            <LinearLayout
                android:id="@+id/layout_user_info_changesex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" >

                <TextView
                    style="@style/Common_Settings_TextView_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_sfz_image" />

                <TextView
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/user_sfz_image_hint" />

                <TextView
                    android:id="@+id/textview_user_info_sfz_image"
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test" />
            </LinearLayout>

            <include layout="@layout/common_view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" >

                <TextView
                    style="@style/Common_Settings_TextView_Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/user_sfz_sc_image" />

                <TextView
                    android:id="@+id/textview_user_info_sfz_sc_image"
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test" />
            </LinearLayout>

            <include layout="@layout/common_view_line" />

            <Button
                android:id="@+id/button_user_info_logout"
                style="@style/Button.Yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/user_logout" />
        </LinearLayout>

        <LinearLayout
            style="@style/Common_Settings_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="8dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" >

                <TextView
                    style="@style/Common_Settings_TextView_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_address" />

                <TextView
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/user_private" />

                <TextView
                    android:id="@+id/textview_user_info_address"
                    style="@style/Common_Settings_TextView_Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="@string/test" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button_user_info_save"
            style="@style/Button.Yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/user_logout" />
    </LinearLayout>

</ScrollView>