<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment_background"
        android:orientation="vertical" >

        <RelativeLayout
            style="@style/Common_Settings_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="16dp" >

            <TextView
                android:id="@+id/textview_user_info_face"
                style="@style/Common_Settings_TextView_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="0dp"
                android:text="@string/user_avatar" />

            <com.azhuoinfo.gbf.view.imageview.round.RoundedImageView
                android:id="@+id/imageview_user_info_face"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/ic_face_man"
                app:oval="true" />
        </RelativeLayout>

        <LinearLayout
            style="@style/Common_Settings_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:padding="4dp" >

            <TextView
                style="@style/Common_Settings_TextView_Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/user_userId" />

            <TextView
                android:id="@+id/textview_user_info_userid"
                style="@style/Common_Settings_TextView_Hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="@string/test" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_user_info_changenickname"
            style="@style/Common_Settings_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp" >

            <TextView
                style="@style/Common_Settings_TextView_Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/user_nickname" />

            <TextView
                android:id="@+id/textview_user_info_nickname"
                style="@style/Common_Settings_TextView_Hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_user_info_changesex"
            style="@style/Common_Settings_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp" >

            <TextView
                style="@style/Common_Settings_TextView_Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/user_gender" />

            <TextView
                android:id="@+id/textview_user_info_sex"
                style="@style/Common_Settings_TextView_Hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_user_info_changelocation"
            style="@style/Common_Settings_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp" >

            <TextView
                style="@style/Common_Settings_TextView_Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/user_location" />

            <TextView
                android:id="@+id/textview_user_info_location"
                style="@style/Common_Settings_TextView_Hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test" />
        </LinearLayout>
		<LinearLayout
            android:id="@+id/layout_user_info_changebirthday"
            style="@style/Common_Settings_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp" >

            <TextView
                style="@style/Common_Settings_TextView_Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/user_birthday" />

            <TextView
                android:id="@+id/textview_user_info_birthday"
                style="@style/Common_Settings_TextView_Hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_user_info_changemobile"
            style="@style/Common_Settings_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp" >

            <TextView
                style="@style/Common_Settings_TextView_Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/user_mobile" />

            <TextView
                android:id="@+id/textview_user_info_mobile"
                style="@style/Common_Settings_TextView_Hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_bind" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_user_info_changeemail"
            style="@style/Common_Settings_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp" >

            <TextView
                style="@style/Common_Settings_TextView_Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/user_email" />

            <TextView
                android:id="@+id/textview_user_info_email"
                style="@style/Common_Settings_TextView_Hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_bind" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_user_info_changepwd"
            style="@style/Common_Settings_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                style="@style/Common_Settings_TextView_Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/user_change_password" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_user_info_logout"
            style="@style/Common_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/user_logout" />
    </LinearLayout>

</ScrollView>