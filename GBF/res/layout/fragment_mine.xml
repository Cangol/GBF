<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_mine_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.azhuoinfo.gbf.view.imageview.round.RoundedImageView
            android:id="@+id/imageview_mine_avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_women_default"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            app:border_color="@android:color/white"
            app:border_width="2dp"
            app:oval="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textview_mine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_black"
                android:text="@string/common_nologin"/>

            <TextView
                android:id="@+id/textview_mine_userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_grey"
                android:text="@string/common_nologin" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageview_mine_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"
            android:layout_margin="12dp"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <include layout="@layout/common_view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/textview_mine_favorite"
            style="@style/Mine_Icon_Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_favorite"
            android:text="@string/mine_menu_favorite" />

        <include layout="@layout/common_view_separate" />

        <TextView
            android:id="@+id/textview_mine_order"
            style="@style/Mine_Icon_Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_order"
            android:text="@string/mine_menu_order" />

        <include layout="@layout/common_view_separate" />

        <TextView
            android:id="@+id/textview_mine_sales"
            style="@style/Mine_Icon_Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_sales"
            android:text="@string/mine_menu_sales" />
    </LinearLayout>

    <include layout="@layout/common_view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_horizontal" >

       <TextView
            android:id="@+id/textview_mine_shopcar"
            style="@style/Mine_Icon_Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_shopcar"
            android:text="@string/mine_menu_shopcar" />

        <include layout="@layout/common_view_separate" />

        <TextView
            android:id="@+id/textview_mine_friend"
            style="@style/Mine_Icon_Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_friend"
            android:text="@string/mine_menu_friend" />

        <include layout="@layout/common_view_separate" />

       <TextView
            android:id="@+id/textview_mine_member"
            style="@style/Mine_Icon_Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_member"
            android:text="@string/mine_menu_member" />
    </LinearLayout>

    <include layout="@layout/common_view_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_horizontal" >

       <TextView
            style="@style/Mine_Icon_Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_friend"
            android:text="@string/mine_menu_friend"
			android:visibility="invisible"/>
        <include layout="@layout/common_view_separate" />

        <TextView
            style="@style/Mine_Icon_Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
			android:visibility="invisible"/>

        <include layout="@layout/common_view_separate" />

      <TextView
            style="@style/Mine_Icon_Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
			android:visibility="invisible"/>
    </LinearLayout>
	<include layout="@layout/common_view_line" />
</LinearLayout>