<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:orientation="vertical"
    android:layout_margin="8dp" >

     <TextView
            android:id="@+id/textview_message_details_title"
            style="@style/Common_TextView_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="8dp"
            android:text="@string/test" />
     
      <TextView
            android:id="@+id/textview_message_details_time"
            style="@style/Common_TextView_Hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:text="@string/test" />
     <include layout="@layout/common_view_line" />
     
	 <TextView
            android:id="@+id/textview_message_details_content"
            style="@style/Common_TextView_Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:layout_margin="8dp"
            android:text="@string/test" />
</LinearLayout>