<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/textview_aboutus_logo"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_logo" />

            <TextView
                android:id="@+id/textview_aboutus_name"
                style="@style/Common_TextView_Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/textview_aboutus_version"
                style="@style/Common_TextView_Hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@string/app_version" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_aboutus_upgrade"
            style="@style/Common_Settings_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp" >

            <TextView
                android:id="@+id/textview_aboutus_upgrade"
                style="@style/Common_Settings_TextView_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_upgrade" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_aboutus_copyright"
            style="@style/Common_Settings_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp" >

            <TextView
                android:id="@+id/textview_aboutus_copyright"
                style="@style/Common_Settings_TextView_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_copyright" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_aboutus_service"
            style="@style/Common_Settings_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp" >

            <TextView
                android:id="@+id/textview_aboutus_service"
                style="@style/Common_Settings_TextView_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_service" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_aboutus_private"
            style="@style/Common_Settings_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp" >

            <TextView
                android:id="@+id/textview_aboutus_private"
                style="@style/Common_Settings_TextView_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_private" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_aboutus_license"
            style="@style/Common_Settings_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp" >

            <TextView
                android:id="@+id/textview_aboutus_license"
                style="@style/Common_Settings_TextView_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_license" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_aboutus_rating"
            style="@style/Common_Settings_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp" >

            <TextView
                android:id="@+id/textview_aboutus_rating"
                style="@style/Common_Settings_TextView_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_rating" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textview_aboutus_devices"
                style="@style/Common_TextView_Mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/app_devices" />

            <TextView
                android:id="@+id/textview_aboutus_build"
                style="@style/Common_TextView_Mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_build" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>