<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Common_ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
		
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	        <EditText
	            android:id="@+id/edittext_feedback_content"
	            style="@style/Common_EditText"
	            android:layout_width="match_parent"
	            android:layout_height="200dp"
	            android:maxLength="500"
	            android:hint="@string/feedback_content_hint"
	            android:gravity="top|left"
	            android:inputType="textMultiLine" >
	            <requestFocus />
	        </EditText>
	        <TextView
	            android:id="@+id/edittext_feedback_content_num"
                style="@style/Common_TextView_Hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:padding="8dp"
                android:text="@string/feedback_content_num" />
		</RelativeLayout>
        <EditText
            android:id="@+id/edittext_feedback_contact"
            style="@style/Common_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/feedback_contact_hint"
            android:singleLine="true" >

        </EditText>

        <Button
            android:id="@+id/button_feedback_submit"
            style="@style/Common_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/feedback_submit" />
    </LinearLayout>

</ScrollView>