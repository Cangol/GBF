<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_listview_item_selector"
    android:descendantFocusability="beforeDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="4dp" >

    <com.azhuoinfo.gbf.view.imageview.round.RoundedImageView
                android:id="@+id/listview_item_friend_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_face_man"
                app:border_color="#f2f2f2"
                app:border_width="1dp" />
     <TextView
            android:id="@+id/listview_item_friend_nickname"
            style="@style/Common_TextView_Title"
            android:layout_marginLeft="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/test" />
      <TextView
            android:id="@+id/listview_item_friend_status"
            style="@style/Common_TextView_Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/friend_remove" />

</LinearLayout>